{
  "name": "variant-mixer",
  "version": "1.1.1",
  "author": "4FCG",
  "private": true,
  "description": "Application to create your own image variants.",
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "electron": "^13.1.9",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^4.3.9",
    "extract-zip": "^2.0.1",
    "fs-extra": "^10.0.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "sharp": "^0.29.0",
    "styled-components": "^5.3.0"
  },
  "main": "src/services/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently -k \"cross-env BROWSER=none npm run start\" \"npm:electron\"",
    "electron": "wait-on tcp:3000 && electron .",
    "dist": "npm run build && electron-builder -c.extraMetadata.main=build/electron.js --win --publish never",
    "publish": "npm run build && electron-builder -c.extraMetadata.main=build/electron.js --win --publish always"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "electron-builder": "^22.11.7",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest-dom": "^3.9.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-testing-library": "^4.12.0",
    "react-scripts": "4.0.3",
    "wait-on": "^6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/4FCG/variant-mixer.git"
  },
  "build": {
    "appId": "com.4fcg.variant-mixer",
    "productName": "variant-mixer",
    "copyright": "Copyright Â© 2021 4FCG",
    "target": "NSIS",
    "extends": null,
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    },
    "publish": {
      "provider": "github"
    }
  }
}
